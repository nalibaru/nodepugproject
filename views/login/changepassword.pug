extends ../layout/loginlayout.pug

block content
  div(class="log-container")
    h3(class="logmessage-content")=message
    div(id="login-image")
      img(src="/public/images/login.png" alt="Login Image")
    div(class="login-form")
      form(class="login-form-main" action="/confirmpassword" method="POST")
        div(class="login-div")
          label(for="username") Username:
          input(type="text" id="username" name="username" value=`${username}` readonly)
        div(class="login-div")
          label(for="password") Password:
          input(type="password" id="password" name="password" required)
        div(class="login-div")
          label(for="password") Confirm Password:
          input(type="password" id="cpassword" name="cpassword" required)
        button(type="submit") Change Password
        div(class="linkcontainer")
          a(href="#", onclick="cancel(); return false;") Cancel

block scripts
  script.
    function cancelPage() {
     window.location.href = '/login';
    }


